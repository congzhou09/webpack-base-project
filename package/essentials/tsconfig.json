{
  "include": ["src"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES5",
    "module": "es2015",
    "lib": ["dom", "es6", "es7"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "declaration": false,
    "downlevelIteration": true,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
